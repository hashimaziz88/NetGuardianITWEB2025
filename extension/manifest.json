{
  "manifest_version": 3,
  "name": "NETGUARDIAN",
  "version": "1.0",
  "description": "Protects users by verifying websites and detecting scams.",
  "permissions": [
    "activeTab",
    "notifications",
    "tabs",
    "webNavigation",
    "storage",
    "scripting"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
